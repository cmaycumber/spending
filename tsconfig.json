{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"rootDir": "./src",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"spending/*": ["src/*"],
			"spending": ["src/index.ts"]
		}
	},
	"include": ["src"]
}
